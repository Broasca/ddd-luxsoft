{% extends "base.html.twig" %}
{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h1>Collection</h1>
            </div>
        </div>
    </div>
    <div class="container">
        {% for item in items %}
            <div class="row">
                <div class="col">
                    <h2>{{ item.id }} - {{ item.name }}</h2>
                    <hr>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col">
                    {{ item.description | raw }}<br>
                    {{ item.initialPrice | number_format(2, ',', '.') }}<br>
                </div>
                <div class="col">
                    <button type="button" class="btn btn-success">List to Auction</button>
                    <button type="button" class="btn btn-secondary">Edit</button>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
